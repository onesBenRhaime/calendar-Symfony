{% extends 'baseBack.html.twig' %}

{% block title %}Tache index{% endblock %}
{% block search %}
   <form class="app-search d-none d-lg-block" method="post" action="{{path('app_search_tache',{'id':idP})}}">
                            <div class="position-relative">
                                <input type="text" class="form-control" name="search" placeholder="Search...">
                                <span class="bx bx-search-alt"></span>
                            </div>
                        </form>
                        {% endblock %}

{% block content %}
    <div class="row">
                            <div class="col-lg-12">
                                <div class="card">
                                    <div class="card-body">
                                        <h4 class="card-title mb-4">Liste des taches</h4>
                                        <div class="table-responsive">
                                   <table class="table align-middle table-nowrap mb-0">


       <thead class="table-light">
                                                    <tr>
                                                        <th style="width: 20px;">
                                                       
                                                            <div class="form-check font-size-16 align-middle">
                                                               
                                                                <label class="form-check-label" for="transactionCheck01"></label>
                                                            </div>
                                                        </th>
         
               <th class="align-middle">ID</th>
                <th class="align-middle">Nom</th>
                <th class="align-middle">Projet</th>
                <th class="align-middle">Date</th>
                <th class="align-middle">priorite</th>
                <th class="align-middle">Statut</th>
                
                <th class="align-middle">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tache in taches %}
            <tr>
             <td>
                                                            <div class="form-check font-size-16">
                                                                
                                                                <label class="form-check-label" for="transactionCheck02"></label>
                                                            </div>
                                                        </td>
               
                <td>{{ tache.id_tache}}</td>
                <td>{{ tache.nom }}</td>
                <td> {{ tache.projet.nom }} </td>
                
                <td>{{ tache.date ? tache.date|date('Y-m-d') : '' }}</td>
                
                    
                 <td>{{ tache.priorite ? tache.priorite }}</td>
                 <td>{{ tache.statut ? tache.statut }}</td>
                                <td>
                                    <a href="{{ path('app_tache_edit', {'id': tache.id_tache}) }}" class="btn btn-success">Modifier</a>
                                    <a href="{{ path('app_tache_delete', {'id': tache.id_tache}) }}" class="btn btn-danger">Supprimer</a>
                                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
                                        <!-- end table-responsive -->
                                                                       <a href="{{ path('app_tache_new') }}"> <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cr√©er une tache</button></a>

                                    </div>
                                </div>
                            </div>
                        </div>
                        


{% endblock %}
